{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Micronaut Application",
            "request": "launch",
            "type": "java",
            "command": "./mvnw",
            "args": [
                "mn:run"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}